{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "target": "ES6",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
