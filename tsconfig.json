{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "config-cli",
    "dist"
  ]
}
